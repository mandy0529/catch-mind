doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/styles.css")
        title Document
    body
        .loginBox
            form#jsLogin
                input(placeholder="Set your nickname" type="text")
        .gameContainer#jsGame
            .main
                canvas.canvas#jsCanvas
                .controls#controls
                    button#jsMode Fill
                    .colors
                        .color.jsColor(style="background-color:rgb(0, 0, 0)")
                        .color.jsColor(style="background-color:rgb(255,255,255)")
                        .color.jsColor(style="background-color:rgb(255,59,48)")
                        .color.jsColor(style="background-color:rgb(255,149,0)")
                        .color.jsColor(style="background-color:rgb(255,204,0)")
                        .color.jsColor(style="background-color:rgb(76,217,100)")
                        .color.jsColor(style="background-color:rgb(90,200,250)")
                        .color.jsColor(style="background-color:rgb(0,122,255)")
                        .color.jsColor(style="background-color:rgb(88,86,214)")
                .chat
                    .player__board#playerBoard
                    ul.text__ul#textUl
                        form(method="post")#textForm
                            input(placeholder="write your text" type=text required).text__input
        .notiContainer#jsNoti
        script. 
            window.minji =!{minji}
        script(src="/socket.io/socket.io.js") 
        script(src="/js/main.js")